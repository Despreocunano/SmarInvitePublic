---
const { title = '', subtitle = '', steps = [] } = Astro.props;
import { User, LayoutDashboard, Globe, Heart } from '@lucide/astro';
import TemplateExamples from './TemplateExamples';

const iconMap: Record<string, any> = { User, LayoutDashboard, Globe, Heart };
---

<section class="py-32 bg-gradient-to-b from-white via-rose-50/20 to-white relative overflow-hidden">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold text-rose-600 mb-8 leading-tight">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-gray-600 max-w-4xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 lg:gap-12">
      {steps.map((step: { step: string; title: string; description: string; color: string; bgColor: string }, idx: number) => (
        <div class="relative group">
          <div class={`relative bg-gradient-to-br ${step.bgColor} rounded-3xl p-8 shadow-2xl border border-white/50 backdrop-blur-sm overflow-hidden`}>
            <div class={`relative w-20 h-20 bg-gradient-to-r ${step.color} rounded-3xl flex items-center justify-center mb-8 shadow-lg`}>
              <span class="absolute text-2xl font-bold text-white drop-shadow-lg">{step.step}</span>
            </div>
            <h3 class="text-2xl font-bold text-slate-600 mb-6">{step.title}</h3>
            <p class="text-gray-600 leading-relaxed text-lg">{step.description}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>