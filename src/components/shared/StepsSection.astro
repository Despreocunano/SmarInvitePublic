---
const { title = '', subtitle = '', steps = [] } = Astro.props;
import { User, LayoutDashboard, Globe, CheckCircle } from '@lucide/astro';
const iconMap: Record<string, any> = { User, LayoutDashboard, Globe, CheckCircle };
---

<section class="py-32 bg-gradient-to-b from-white via-slate-50/30 to-white relative overflow-hidden">
  <!-- Elementos decorativos sutiles -->
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_20%_30%,rgba(148,163,184,0.08),transparent_50%)]"></div>
  <div class="absolute inset-0 bg-[radial-gradient(circle_at_80%_70%,rgba(100,116,139,0.06),transparent_50%)]"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold text-slate-700 mb-8 leading-tight">
        {title}
      </h2>
      <p class="text-xl md:text-2xl text-slate-600 max-w-4xl mx-auto leading-relaxed">
        {subtitle}
      </p>
    </div>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-10 lg:gap-16">
      {steps.map((step: { step: string; title: string; description: string; color: string; bgColor: string }, idx: number) => (
        <div class="relative group">
          <!-- Sombra sutil estática -->
          <div class="absolute inset-0 bg-gradient-to-br from-slate-200/15 to-gray-300/15 rounded-3xl blur-xl transform translate-y-4"></div>
          
          <div class="relative bg-gradient-to-br from-white via-slate-50/50 to-gray-50/30 rounded-3xl p-10 shadow-xl border border-slate-200/60 backdrop-blur-sm overflow-hidden">
            <!-- Elementos decorativos sutiles -->
            <div class="absolute top-0 right-0 w-32 h-32 bg-gradient-to-br from-slate-100/40 to-transparent rounded-full blur-2xl"></div>
            <div class="absolute bottom-0 left-0 w-24 h-24 bg-gradient-to-tr from-gray-100/30 to-transparent rounded-full blur-xl"></div>
            
            <!-- Número del paso -->
            <div class="relative w-20 h-20 bg-gradient-to-br from-slate-600 via-slate-700 to-gray-700 rounded-2xl flex items-center justify-center mb-8 shadow-lg">
              <span class="text-2xl font-bold text-white drop-shadow-lg">{step.step}</span>
              <div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent rounded-2xl"></div>
            </div>
            
            <!-- Contenido -->
            <div class="relative z-10">
              <h3 class="text-2xl font-bold text-slate-700 mb-6">{step.title}</h3>
              <p class="text-slate-600 leading-relaxed text-lg">{step.description}</p>
            </div>
            
            <!-- Indicador de progreso sutil -->
            <div class="absolute bottom-0 left-0 right-0 h-1 bg-gradient-to-r from-slate-300 via-gray-400 to-slate-300 opacity-20"></div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Línea conectora entre pasos (solo visible en desktop) -->
    <div class="hidden md:block absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 w-px h-32 bg-gradient-to-b from-transparent via-slate-300 to-transparent opacity-30"></div>
  </div>
</section>