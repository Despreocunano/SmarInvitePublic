---
const { section, isEven } = Astro.props;
import { Image } from 'astro:assets';
---
<section id={Astro.props.id} class={`py-24 relative overflow-hidden ${isEven ? 'bg-gradient-to-br from-white to-slate-50/30' : 'bg-gradient-to-br from-slate-50/50 to-white'}`}>
  <!-- Patrón de fondo sutil -->
  <div class="absolute inset-0 opacity-[0.02]" style="background-image: radial-gradient(circle at 2px 2px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 40px 40px;"></div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class={`grid lg:grid-cols-2 gap-16 lg:gap-20 items-center ${isEven ? '' : 'lg:grid-flow-col-dense'}`}>
      
      <!-- Contenido de texto -->
      <div class={`space-y-10 ${isEven ? 'lg:pr-8' : 'lg:pl-8 lg:col-start-2'}`}>
        <!-- Badge y título -->
        <div class="space-y-6">
          <!-- Título principal -->
          <h2 class="text-4xl font-bold text-slate-600 leading-tight tracking-tight">
            {section.title}
          </h2>
          
          <!-- Descripción -->
          <p class="text-xl text-slate-600 leading-relaxed">
            {section.description}
          </p>
        </div>

        <!-- Grid de características -->
        <div class="grid gap-3">
          {section.features.map((feature: string, idx: number) => (
            <div class="group">
              <div class="flex items-start gap-4 p-4 rounded-xl bg-white/60 border border-slate-200/50 transition-all duration-300">
                <!-- Número -->
                <div class="flex-shrink-0 w-8 h-8 bg-slate-100 text-slate-600 text-sm font-semibold rounded-lg flex items-center justify-center">
                  {String(idx + 1).padStart(2, '0')}
                </div>
                <!-- Texto -->
                <span class="text-lg text-slate-600 leading-relaxed">{feature}</span>
              </div>
            </div>
          ))}
        </div>
      </div>

      <!-- Imagen con diseño moderno -->
      <div class={`relative ${isEven ? 'lg:pl-8' : 'lg:pr-8 lg:col-start-1'}`}>
        <!-- Contenedor principal de la imagen -->
        <div class="relative">
          <!-- Elemento decorativo de fondo -->
          <div class="absolute -inset-4 bg-gradient-to-br from-slate-100 to-slate-200/50 rounded-3xl transform rotate-1"></div>
          
          <!-- Imagen principal -->
          <div class="relative bg-white rounded-2xl p-3 shadow-xl shadow-slate-200/50 border border-slate-200/50">
            <Image
              src={section.image}
              alt={section.title}
              class="w-full rounded-xl"
            />
          <!-- Elementos decorativos flotantes -->
          <div class="absolute -top-6 -left-6 w-12 h-12 bg-slate-200 rounded-full opacity-60"></div>
          <div class="absolute -bottom-4 -right-4 w-8 h-8 bg-slate-300 rounded-full opacity-40"></div>
          <div class="absolute top-1/2 -left-8 w-4 h-4 bg-slate-400 rounded-full opacity-30"></div>
        </div>
      </div>
    </div>
  </div>
</section>