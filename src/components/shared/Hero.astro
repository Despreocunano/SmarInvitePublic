---
const { texts } = Astro.props;
import { Heart, Mouse } from '@lucide/astro' 
import HeroPrincipal from '../../assets/images/hero_principal.webp'
---
<section class="relative min-h-[90vh] flex items-center justify-center overflow-hidden bg-gradient-to-b from-rose-500 to-rose-700">
  {/* Imagen de fondo */}
  <img
    class="absolute inset-0 w-full h-full object-cover z-0"
    src={HeroPrincipal.src}
    alt="Hero background"
    loading="eager"
    draggable="false"
  />
  {/* Capa de oscurecimiento opcional */}
  <div class="absolute inset-0 bg-black/40 z-10 pointer-events-none"></div>
  {/* Contenido del hero */}
  <div class="relative z-20 w-full max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 flex flex-col md:flex-row items-center justify-between gap-12 pt-32 pb-20 md:pt-40 md:pb-32">
    <div 
      class="flex-1 text-center md:text-left"
    >
      <div class="inline-block mb-6">
        <div 
          class="w-24 h-px bg-gradient-to-r from-transparent via-rose-400 to-transparent"
        />
      </div>
      <p class="text-3xl md:text-6xl font-bold text-white mb-4 md:mb-6 leading-tight">
        <span class="bg-clip-text text-transparent bg-gradient-to-r from-rose-200 to-rose-400">
          {texts.home.hero.title}
        </span>
      </p>
      <p class="text-lg md:text-2xl text-white/90 mb-6 md:mb-8 font-light">
        {texts.home.hero.subtitle}
      </p>
      <h1 class="text-xl md:text-3xl text-white font-light mb-8 md:mb-12">
        {texts.home.hero.cta}
      </h1>
      <div class="flex flex-col sm:flex-row gap-4 justify-center md:justify-start">
        <div
          class="w-full sm:w-auto"
        >
          <a
            href="https://app.tuparte.digital/auth"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center w-full px-8 py-4 text-lg rounded-md bg-gradient-to-r from-rose-500 to-rose-600 hover:from-rose-600 hover:to-rose-700 text-white transition-all duration-300 group shadow-lg shadow-rose-500/25"
          >
            <span>{texts.home.hero.button}</span>
            <Heart class="ml-2 h-5 w-5 group-hover:text-white transition-transform group-hover:scale-125" />
          </a>
        </div>
        <div class="w-full sm:w-auto">
          <a
            href="#feature-section"
            class="inline-flex items-center justify-center w-full px-8 py-4 text-lg rounded-md bg-white/10 text-white border-white/20 hover:bg-white/20 transition-all duration-300 backdrop-blur-sm shadow-lg shadow-rose-500/10"
          >
            {texts.home.hero.secondary}
          </a>
        </div>
      </div>
    </div>

    <div 
      class="flex-1 max-w-[280px] hidden md:block"
    >
      <div class="relative mx-auto border-gray-800 dark:border-gray-800 bg-gray-800 border-[14px] rounded-[2.5rem] h-[600px] w-[300px] shadow-xl">
        <div class="h-[32px] w-[3px] bg-gray-800 dark:bg-gray-800 absolute -start-[17px] top-[72px] rounded-s-lg"></div>
        <div class="h-[46px] w-[3px] bg-gray-800 dark:bg-gray-800 absolute -start-[17px] top-[124px] rounded-s-lg"></div>
        <div class="h-[46px] w-[3px] bg-gray-800 dark:bg-gray-800 absolute -start-[17px] top-[178px] rounded-s-lg"></div>
        <div class="h-[64px] w-[3px] bg-gray-800 dark:bg-gray-800 absolute -end-[17px] top-[142px] rounded-e-lg"></div>
        <div class="rounded-[2rem] overflow-hidden w-[272px] h-[572px] bg-white dark:bg-gray-800">
          <div class="relative h-full">
            <img
              src="https://images.pexels.com/photos/1589820/pexels-photo-1589820.jpeg"
              class="absolute inset-0 h-full w-full object-cover"
              alt="Wedding invitation preview"
            />
            <div class="absolute inset-0 bg-gradient-to-b from-black/40 to-black/60 flex flex-col items-center justify-center text-white p-6">
              <div class="absolute top-0 left-0 right-0 h-6 bg-black/80"></div>
              <div>
                <h3 class="text-2xl font-serif mb-4">Juan & María</h3>
                <p class="text-sm mb-8">12 de Octubre, 2026</p>
              </div>
              <div class="space-y-3 w-full">
                <button
                  class="w-full bg-gradient-to-r from-rose-500 to-rose-600 text-white rounded-lg py-2 text-sm font-medium shadow-lg shadow-rose-500/25"
                >
                  AGENDAR
                </button>
                <button
                  class="w-full bg-white/20 text-white rounded-lg py-2 text-sm font-medium backdrop-blur-sm"
                >
                  CONFIRMAR ASISTENCIA
                </button>
                <button
                  class="w-full bg-white/20 text-white rounded-lg py-2 text-sm font-medium backdrop-blur-sm"
                >
                  ¿CÓMO LLEGAR?
                </button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div 
    class="pointer-events-none absolute bottom-8 left-1/2 -translate-x-1/2 z-30 flex flex-col items-center w-auto"
  >
    <Mouse class="h-10 w-10 text-white animate-bounce" />
    <span class="text-xs text-white/70 mt-1">{texts.home.hero.heroScroll ?? (texts.home.hero.button === 'Create my invitation' ? 'Scroll to see more' : 'Desliza para ver más')}</span>
  </div>
</section>