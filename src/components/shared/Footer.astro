---
import Logo from '../../assets/images/logo-parte.svg'
const { texts } = Astro.props;
---
<footer class="bg-slate-800 py-12">
  <div class="max-w-6xl mx-auto px-4 text-center">
    <img src={Logo.src} alt="Parte Digital" class="h-8 w-auto mx-auto mb-4" />
    <p class="text-gray-200">
      {texts.home.footer.copyright.replace('{year}', new Date().getFullYear())}
    </p>
    <div class="mt-4 flex justify-center gap-6">
      <a href="/privacy-policy" class="text-gray-400 hover:text-white underline transition">Privacy Policy</a>
      <a href="/terms-and-conditions" class="text-gray-400 hover:text-white underline transition">Terms & Conditions</a>
    </div>
  </div>
</footer> 