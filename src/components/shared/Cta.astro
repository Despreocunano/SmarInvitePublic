---
const { title, description, button } = Astro.props;
import { Heart } from '@lucide/astro';
---
<section class="py-20 bg-gradient-to-b from-white to-rose-50/30">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="bg-gradient-to-r from-rose-500 to-rose-600 rounded-2xl p-8 md:p-12 shadow-xl relative overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,rgba(255,255,255,0.1)_0%,rgba(0,0,0,0)_70%)]"></div>
      <div class="absolute inset-0 bg-[linear-gradient(45deg,transparent_25%,rgba(255,255,255,0.1)_50%,transparent_75%)] bg-[length:250%_250%] animate-shimmer"></div>
      
      <!-- Floating hearts decoration -->
      <div class="absolute top-4 left-4 opacity-20">
        <Heart class="h-8 w-8 text-white animate-pulse" />
      </div>
      <div class="absolute top-8 right-8 opacity-20">
        <Heart class="h-6 w-6 text-white animate-pulse" style="animation-delay: 0.5s;" />
      </div>
      <div class="absolute bottom-6 left-12 opacity-20">
        <Heart class="h-4 w-4 text-white animate-pulse" style="animation-delay: 1s;" />
      </div>
      
      <div class="relative z-10 flex flex-col md:flex-row items-center justify-between gap-8">
        <div class="text-center md:text-left">
          <div class="flex items-center justify-center md:justify-start mb-4">
            <Heart class="h-8 w-8 text-white mr-3 animate-bounce" />
            <h2 class="text-2xl md:text-3xl font-bold text-white">
              {title}
            </h2>
          </div>
          <p class="text-white/90 text-lg">
            {description}
          </p>
        </div>
        <a
          href="https://app.smartinvite.me/register"
          class="inline-flex items-center justify-center w-full md:w-auto px-8 py-4 text-lg rounded-md bg-gradient-to-r from-white to-rose-50 hover:from-rose-50 hover:to-white text-rose-600 transition-all duration-300 group shadow-lg shadow-black/10 hover:shadow-xl hover:scale-105"
        >
          <span class="font-semibold">{button}</span>
          <Heart class="ml-3 h-6 w-6 text-rose-500 group-hover:animate-pulse" />
        </a>
      </div>
    </div>
  </div>
</section> 