---
export interface Props {
  nombre: string;
  imagen: string;
  enlace: string;
  color?: string;
}
const { nombre, imagen, enlace, color = 'rose' } = Astro.props;
---

<div class="flex flex-col items-center bg-white rounded-xl shadow-lg p-6 border border-rose-100">
  <img src={imagen} alt={nombre} class="aspect-[3/5] max-h-72 rounded-lg object-cover mb-4" />
  <span class="block text-lg font-semibold text-gray-800 mb-2">{nombre}</span>
  <a
    href={enlace}
    class={`inline-block mt-1 px-6 py-2 rounded-full bg-gradient-to-r from-${color}-500 to-${color}-600 text-white text-sm font-semibold shadow-md hover:from-${color}-600 hover:to-${color}-700 transition-colors duration-300`}
    target="_blank"
    rel="noopener noreferrer"
  >
    Ver ejemplo
  </a>
</div> 