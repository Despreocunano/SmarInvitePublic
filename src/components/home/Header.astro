---
import { User, Menu, X, UserPlus } from '@lucide/astro'
import Logo from '../../assets/images/logo-parte.svg'
const currentPath = Astro.url.pathname;

function isActive(path: string) {
  return currentPath === path || currentPath === path + '/';
}
---
<header class="fixed top-0 left-0 right-0 z-[60] transition-all duration-300 bg-gray-900 backdrop-blur-md shadow-lg border-b border-white/10">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16">
      <!-- Logo -->
      <div class="flex items-center">
        <a href="/" class="flex items-center">
          <img src={Logo.src} alt="Parte Digital" class="h-8 md:h-12 w-auto" />
        </a>
      </div>

      <!-- Right side buttons -->
      <div class="flex items-center gap-2">
        <!-- Desktop Navigation -->
        <nav class="hidden md:flex items-center">
          <a href="/como-funciona" class={`font-medium px-3 py-2 rounded-lg relative group transition-colors duration-300 ${isActive('/como-funciona') ? 'bg-gradient-to-r from-rose-500/30 to-pink-500/30 text-white shadow-lg' : 'text-white/90 hover:text-white hover:bg-white/10'}`}>¿Cómo funciona?</a>
          <a href="/ejemplos" class={`ml-2 font-medium px-3 py-2 rounded-lg relative group transition-colors duration-300 ${isActive('/ejemplos') ? 'bg-gradient-to-r from-fuchsia-500/30 to-violet-500/30 text-fuchsia-200 shadow-lg' : 'text-white/90 hover:text-white hover:bg-white/10'}`}>Ejemplos</a>
          <a href="/invitados" class={`ml-2 font-medium px-3 py-2 rounded-lg relative group transition-colors duration-300 ${isActive('/invitados') ? 'bg-gradient-to-r from-emerald-500/30 to-blue-500/30 text-white shadow-lg' : 'text-white/90 hover:text-white hover:bg-white/10'}`}>Gestión de invitados</a>
        </nav>
        
        <!-- Separator -->
        <div class="hidden md:block w-px h-6 bg-white/20 mx-1"></div>
        
        <!-- Desktop Login button -->
        <a
          href="https://app.tuparte.digital/auth?showLogin=true"
          class="hidden md:inline-flex items-center px-4 py-2 text-sm font-medium text-white bg-white/20 hover:bg-white/30 rounded-full transition-all duration-300 backdrop-blur-sm border border-white/20"
        >
          <User class="h-4 w-4 mr-2" />
          Ingresar
        </a>
        
        <!-- Flag -->
        <img src="https://flagcdn.com/cl.svg" alt="Chile" class="h-4 w-6 object-cover rounded-sm shadow inline-block align-middle" />

        <!-- Mobile menu button -->
        <button 
          id="mobile-menu-button"
          class="md:hidden inline-flex items-center justify-center p-2 rounded-md text-white hover:text-white hover:bg-white/20 transition-colors duration-300"
          aria-expanded="false"
        >
          <Menu id="menu-icon" class="h-6 w-6" />
          <X id="close-icon" class="h-6 w-6 hidden" />
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Full Screen Panel -->
  <div 
    id="mobile-panel" 
    class="fixed inset-0 w-screen h-[100dvh] bg-gray-900 z-[70] transform translate-x-full transition-transform duration-300 ease-in-out md:hidden overflow-hidden"
  >
    <!-- Panel Header - Same width as navbar -->
    <div class="border-b border-gray-700 bg-gray-900 flex-shrink-0">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
          <img src={Logo.src} alt="Parte Digital" class="h-8 w-auto" />
          <div class="flex items-center gap-2">
            <img src="https://flagcdn.com/cl.svg" alt="Chile" class="h-4 w-6 object-cover rounded-sm shadow inline-block align-middle" />
            <button 
              id="close-panel-button"
              class="p-2 rounded-md text-white hover:text-white hover:bg-white/20 transition-colors duration-300"
            >
              <X class="h-6 w-6" />
            </button>
          </div>
        </div>
      </div>
    </div>

    <!-- Panel Content -->
    <div class="flex flex-col h-[100dvh] bg-gray-900">
      <!-- Navigation Links -->
      <nav class="flex-1 px-6 py-8 bg-gray-900 overflow-y-auto">
        <div class="space-y-4">
          <a 
            href="/como-funciona" 
            class={`mobile-menu-link flex items-center px-6 py-4 rounded-xl transition-all duration-200 font-medium text-lg group ${isActive('/como-funciona') ? 'bg-gradient-to-r from-rose-500/30 to-pink-500/30 text-white shadow-lg' : 'text-white hover:text-white hover:bg-gray-800'}`}
          >
            <span class={`w-3 h-3 rounded-full mr-4 transition-opacity duration-200 ${isActive('/como-funciona') ? 'bg-rose-500 opacity-100' : 'bg-rose-500 opacity-30 group-hover:opacity-100'}`}></span>
            ¿Cómo funciona?
          </a>
          <a 
            href="/ejemplos" 
            class={`mobile-menu-link flex items-center px-6 py-4 rounded-xl transition-all duration-200 font-medium text-lg group ${isActive('/ejemplos') ? 'bg-gradient-to-r from-fuchsia-500/30 to-violet-500/30 text-fuchsia-200 shadow-lg' : 'text-white hover:text-white hover:bg-gray-800'}`}
          >
            <span class={`w-3 h-3 rounded-full mr-4 transition-opacity duration-200 ${isActive('/ejemplos') ? 'bg-fuchsia-500 opacity-100' : 'bg-fuchsia-500 opacity-30 group-hover:opacity-100'}`}></span>
            Ejemplos
          </a>
          <a 
            href="/invitados" 
            class={`mobile-menu-link flex items-center px-6 py-4 rounded-xl transition-all duration-200 font-medium text-lg group ${isActive('/invitados') ? 'bg-gradient-to-r from-emerald-500/30 to-blue-500/30 text-white shadow-lg' : 'text-white hover:text-white hover:bg-gray-800'}`}
          >
            <span class={`w-3 h-3 rounded-full mr-4 transition-opacity duration-200 ${isActive('/invitados') ? 'bg-emerald-500 opacity-100' : 'bg-emerald-500 opacity-30 group-hover:opacity-100'}`}></span>
            Gestión de invitados
          </a>
        </div>
      </nav>

      <!-- Panel Footer with Action Buttons -->
      <div class="p-6 pb-8 border-t border-gray-700 bg-gray-900 flex-shrink-0">
        <!-- Primary CTA - Register -->
        <a
          href="https://app.tuparte.digital/auth"
          class="flex items-center justify-center w-full px-6 py-4 text-white bg-gradient-to-r from-rose-500 to-rose-600 hover:from-rose-600 hover:to-rose-700 rounded-xl transition-all duration-300 font-semibold shadow-lg shadow-rose-500/25 group text-lg mb-4"
        >
          <UserPlus class="h-6 w-6 mr-3 group-hover:scale-110 transition-transform duration-200" />
          Crear mi invitación gratis
        </a>

        <!-- Secondary CTA - Login -->
        <a
          href="https://app.tuparte.digital/auth?showLogin=true"
          class="flex items-center justify-center w-full px-6 py-3 text-white bg-white/10 hover:bg-white/20 rounded-xl transition-all duration-300 font-medium border border-white/20 group text-base"
        >
          <User class="h-5 w-5 mr-3 group-hover:scale-110 transition-transform duration-200" />
          Ya tengo cuenta
        </a>
        
        <!-- Additional Info -->
        <div class="mt-6 text-center">
          <p class="text-gray-400 text-sm">
            100% gratis • Sin tarjeta de crédito
          </p>
        </div>
      </div>
    </div>
  </div>
</header>

<script>
  // Mobile menu functionality
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobilePanel = document.getElementById('mobile-panel');
  const closePanelButton = document.getElementById('close-panel-button');
  const menuIcon = document.getElementById('menu-icon');
  const closeIcon = document.getElementById('close-icon');
  const mobileMenuLinks = document.querySelectorAll('.mobile-menu-link');

  function openMobilePanel() {
    // Show panel
    mobilePanel?.classList.remove('translate-x-full');
    mobilePanel?.classList.add('translate-x-0');
    
    // Update button icons
    menuIcon?.classList.add('hidden');
    closeIcon?.classList.remove('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'true');
    
    // Prevent body scroll
    document.body.style.overflow = 'hidden';
  }

  function closeMobilePanel() {
    // Hide panel
    mobilePanel?.classList.remove('translate-x-0');
    mobilePanel?.classList.add('translate-x-full');
    
    // Update button icons
    menuIcon?.classList.remove('hidden');
    closeIcon?.classList.add('hidden');
    mobileMenuButton?.setAttribute('aria-expanded', 'false');
    
    // Restore body scroll
    document.body.style.overflow = '';
  }

  // Open mobile panel
  mobileMenuButton?.addEventListener('click', openMobilePanel);

  // Close mobile panel
  closePanelButton?.addEventListener('click', closeMobilePanel);

  // Close mobile panel when clicking on a navigation link
  mobileMenuLinks.forEach(link => {
    link.addEventListener('click', () => {
      setTimeout(closeMobilePanel, 100); // Small delay for better UX
    });
  });

  // Close panel on escape key
  document.addEventListener('keydown', (event) => {
    if (event.key === 'Escape') {
      closeMobilePanel();
    }
  });

  // Smooth scrolling for navigation links
  document.querySelectorAll('a[href^="#"]').forEach(anchor => {
    anchor.addEventListener('click', function (e) {
      e.preventDefault();
      const href = anchor.getAttribute('href');
      if (href && href !== '#') {
        const target = document.querySelector(href) as HTMLElement;
        if (target) {
          const headerHeight = 80; // Account for fixed header
          const targetPosition = target.offsetTop - headerHeight;
          
          window.scrollTo({
            top: targetPosition,
            behavior: 'smooth'
          });
        }
      }
    });
  });
</script>