---
import Layout from '../../layouts/Layout.astro';
import { Mail, ClipboardCheck, CheckCircle, ArrowRight, Sparkles, Zap, Users, Shield } from '@lucide/astro';
import texts from '../../i18n/ca';
---

<Layout
  title={texts.guestPage.title}
  description={texts.guestPage.description}
  texts={texts}
>
  <main class="pt-16">
    <!-- Hero Section -->
    <section class="relative py-32 overflow-hidden">
      <!-- Fondo con gradiente premium -->
      <div class="absolute inset-0 bg-gradient-to-br from-slate-50 via-white to-slate-100/30"></div>
      
      <!-- Patrón geométrico sutil -->
      <div class="absolute inset-0 opacity-[0.03]" style="background-image: radial-gradient(circle at 1px 1px, rgba(0,0,0,0.15) 1px, transparent 0); background-size: 24px 24px;"></div>
      
      <!-- Elementos decorativos flotantes -->
      <div class="absolute top-20 left-20 w-3 h-3 bg-slate-300 rounded-full opacity-60 animate-pulse"></div>
      <div class="absolute top-40 right-32 w-2 h-2 bg-slate-400 rounded-full opacity-40 animate-pulse delay-1000"></div>
      <div class="absolute bottom-32 left-1/4 w-4 h-4 bg-slate-200 rounded-full opacity-50 animate-pulse delay-500"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-4xl mx-auto">
          <!-- Badge premium -->
          <div class="inline-flex items-center gap-3 px-6 py-3 bg-white rounded-full border border-slate-200 shadow-sm mb-12">
            <Sparkles class="w-5 h-5 text-slate-600" />
            <span class="text-sm font-semibold text-slate-600 tracking-wide">FLEXIBLE GUEST MANAGEMENT</span>
          </div>
          
          <!-- Título principal -->
          <h1 class="text-5xl sm:text-6xl lg:text-7xl font-bold text-slate-600 mb-8 leading-[0.95] tracking-tight" set:html={texts.guestPage.heroTitle} />
          
          <!-- Subtítulo -->
          <p class="text-2xl text-slate-600 mb-16 leading-relaxed max-w-3xl mx-auto">{texts.guestPage.heroSubtitle}</p>
          
          <!-- Mini estadísticas -->
          <div class="flex items-center justify-center gap-8 text-sm text-slate-500">
            <div class="flex items-center gap-2">
              <Zap class="w-4 h-4 text-emerald-500" />
              <span>Instant setup</span>
            </div>
            <div class="w-px h-4 bg-slate-300"></div>
            <div class="flex items-center gap-2">
              <Users class="w-4 h-4 text-blue-500" />
              <span>Unlimited guests</span>
            </div>
            <div class="w-px h-4 bg-slate-300"></div>
            <div class="flex items-center gap-2">
              <Shield class="w-4 h-4 text-emerald-500" />
              <span>Privacy focused</span>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Methods Section -->
    <section class="py-20 relative">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="space-y-80">
          
          <!-- Method 1: Open Invitation -->
          <div class="grid lg:grid-cols-12 gap-16 items-center">
            <!-- Contenido -->
            <div class="lg:col-span-7 space-y-10">
              <!-- Header del método -->
              <div class="flex items-start gap-8">
                <!-- Número grande -->
                <div class="flex-shrink-0 relative">
                  <div class="w-20 h-20 bg-slate-900 text-white rounded-3xl flex items-center justify-center font-black text-2xl shadow-2xl shadow-slate-900/30">
                    1
                  </div>
                  <!-- Línea conectora -->
                  <div class="absolute top-20 left-1/2 w-0.5 h-20 bg-gradient-to-b from-slate-300 to-transparent transform -translate-x-px"></div>
                </div>
                
                <div class="space-y-6 flex-1">
                  <h2 class="text-4xl lg:text-5xl font-bold text-slate-600 leading-tight tracking-tight">{texts.guestPage.traditional.title}</h2>
                  <p class="text-xl text-slate-600 leading-relaxed">{texts.guestPage.traditional.description}</p>
                </div>
              </div>
              
              <!-- Lista de características mejorada -->
              <div class="space-y-5 ml-28">
                {texts.guestPage.traditional.bullets.map((bullet, bulletIdx) => (
                  <div class="group flex items-start gap-5">
                    <div class="flex-shrink-0 w-8 h-8 bg-slate-100 rounded-xl flex items-center justify-center mt-1 group-hover:bg-slate-200 transition-colors duration-200">
                      <CheckCircle class="w-5 h-5 text-slate-600" />
                    </div>
                    <span class="text-lg text-slate-600 leading-relaxed font-medium">{bullet}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Card visual premium -->
            <div class="lg:col-span-5">
              <div class="relative group">
                <!-- Sombra de fondo animada -->
                <div class="absolute -inset-6 bg-gradient-to-br from-slate-200/60 to-slate-300/40 rounded-4xl transform rotate-2 group-hover:rotate-1 transition-transform duration-500"></div>
                
                <!-- Card principal -->
                <div class="relative bg-white rounded-3xl p-10 shadow-2xl shadow-slate-200/60 border border-slate-200/50 group-hover:shadow-3xl transition-all duration-500">
                  <div class="text-center space-y-8">
                    <!-- Icono grande -->
                    <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-slate-100 to-slate-200 rounded-3xl shadow-lg">
                      <ClipboardCheck class="h-12 w-12 text-slate-600" />
                    </div>
                    
                    <!-- Contenido de la card -->
                    <div class="space-y-4">
                      <h3 class="text-2xl font-bold text-slate-600">{texts.guestPage.traditional.cardTitle}</h3>
                      <p class="text-slate-600 leading-relaxed text-lg">{texts.guestPage.traditional.cardDescription}</p>
                    </div>
                    
                    <!-- Indicador de progreso elegante -->
                    <div class="flex items-center justify-center gap-3 pt-6">
                      <div class="w-8 h-2 bg-slate-900 rounded-full"></div>
                      <div class="w-2 h-2 bg-slate-200 rounded-full"></div>
                    </div>
                  </div>
                </div>

                <!-- Elementos decorativos flotantes -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-slate-200 rounded-full opacity-60 group-hover:scale-110 transition-transform duration-300"></div>
                <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-slate-300 rounded-full opacity-40 group-hover:scale-110 transition-transform duration-300 delay-100"></div>
                <div class="absolute top-1/2 -right-8 w-6 h-6 bg-slate-400 rounded-full opacity-30 group-hover:scale-110 transition-transform duration-300 delay-200"></div>
              </div>
            </div>
          </div>

          <!-- Method 2: Personalized Invitations -->
          <div class="grid lg:grid-cols-12 gap-16 items-center lg:grid-flow-col-dense">
            <!-- Contenido -->
            <div class="lg:col-span-7 space-y-10 lg:col-start-6">
              <!-- Header del método -->
              <div class="flex items-start gap-8">
                <!-- Número grande -->
                <div class="flex-shrink-0 relative">
                  <div class="w-20 h-20 bg-slate-900 text-white rounded-3xl flex items-center justify-center font-black text-2xl shadow-2xl shadow-slate-900/30">
                    2
                  </div>
                </div>
                
                <div class="space-y-6 flex-1">
                  <h2 class="text-4xl lg:text-5xl font-bold text-slate-600 leading-tight tracking-tight">{texts.guestPage.email.title}</h2>
                  <p class="text-xl text-slate-600 leading-relaxed">{texts.guestPage.email.description}</p>
                </div>
              </div>
              
              <!-- Lista de características mejorada -->
              <div class="space-y-5 ml-28">
                {texts.guestPage.email.bullets.map((bullet, bulletIdx) => (
                  <div class="group flex items-start gap-5">
                    <div class="flex-shrink-0 w-8 h-8 bg-slate-100 rounded-xl flex items-center justify-center mt-1 group-hover:bg-slate-200 transition-colors duration-200">
                      <CheckCircle class="w-5 h-5 text-slate-600" />
                    </div>
                    <span class="text-lg text-slate-600 leading-relaxed font-medium">{bullet}</span>
                  </div>
                ))}
              </div>
            </div>

            <!-- Card visual premium -->
            <div class="lg:col-span-5 lg:col-start-1">
              <div class="relative group">
                <!-- Sombra de fondo animada -->
                <div class="absolute -inset-6 bg-gradient-to-br from-slate-200/60 to-slate-300/40 rounded-4xl transform rotate-2 group-hover:rotate-1 transition-transform duration-500"></div>
                
                <!-- Card principal -->
                <div class="relative bg-white rounded-3xl p-10 shadow-2xl shadow-slate-200/60 border border-slate-200/50 group-hover:shadow-3xl transition-all duration-500">
                  <div class="text-center space-y-8">
                    <!-- Icono grande -->
                    <div class="inline-flex items-center justify-center w-24 h-24 bg-gradient-to-br from-slate-100 to-slate-200 rounded-3xl shadow-lg">
                      <Mail class="h-12 w-12 text-slate-600" />
                    </div>
                    
                    <!-- Contenido de la card -->
                    <div class="space-y-4">
                      <h3 class="text-2xl font-bold text-slate-600">{texts.guestPage.email.cardTitle}</h3>
                      <p class="text-slate-600 leading-relaxed text-lg">{texts.guestPage.email.cardDescription}</p>
                    </div>
                    
                    <!-- Indicador de progreso elegante -->
                    <div class="flex items-center justify-center gap-3 pt-6">
                      <div class="w-8 h-2 bg-slate-900 rounded-full"></div>
                      <div class="w-8 h-2 bg-slate-900 rounded-full"></div>
                    </div>
                  </div>
                </div>

                <!-- Elementos decorativos flotantes -->
                <div class="absolute -top-4 -right-4 w-12 h-12 bg-slate-200 rounded-full opacity-60 group-hover:scale-110 transition-transform duration-300"></div>
                <div class="absolute -bottom-6 -left-6 w-16 h-16 bg-slate-300 rounded-full opacity-40 group-hover:scale-110 transition-transform duration-300 delay-100"></div>
                <div class="absolute top-1/2 -right-8 w-6 h-6 bg-slate-400 rounded-full opacity-30 group-hover:scale-110 transition-transform duration-300 delay-200"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- CTA Final Premium -->
    <section class="py-32 relative overflow-hidden">
      <div class="absolute inset-0 bg-gradient-to-br from-slate-900 via-slate-800 to-slate-900"></div>
      
      <!-- Patrón de fondo -->
      <div class="absolute inset-0 opacity-10" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 32px 32px;"></div>
      
      <!-- Elementos decorativos -->
      <div class="absolute top-20 left-20 w-4 h-4 bg-white/20 rounded-full animate-pulse"></div>
      <div class="absolute top-40 right-32 w-3 h-3 bg-white/30 rounded-full animate-pulse delay-1000"></div>
      <div class="absolute bottom-32 left-1/4 w-2 h-2 bg-white/25 rounded-full animate-pulse delay-500"></div>
      
      <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="max-w-4xl mx-auto space-y-12">
          <!-- Título -->
          <h2 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white leading-tight tracking-tight">Choose your preferred method</h2>
          <p class="text-2xl text-slate-300 leading-relaxed">Both options are completely free and easy to set up</p>
          
          <!-- Botón principal -->
          <a
            href="https://app.smartinvite.me/auth"
            class="group inline-flex items-center px-12 py-6 text-xl font-bold text-slate-600 bg-white hover:bg-slate-50 rounded-2xl transition-all duration-300 shadow-2xl hover:shadow-3xl hover:scale-105"
          >
            <span>Start managing guests</span>
            <ArrowRight class="ml-4 w-6 h-6 transition-transform duration-300 group-hover:translate-x-2" />
          </a>
          
          <!-- Información adicional -->
          <div class="flex items-center justify-center gap-3 text-slate-400">
            <div class="w-2 h-2 bg-emerald-400 rounded-full"></div>
            <span class="text-lg">100% free • No credit card required</span>
          </div>
          
          <!-- Mini testimonial o estadística -->
          <div class="flex items-center justify-center gap-8 pt-8 border-t border-slate-700">
            <div class="text-center">
              <div class="text-3xl font-bold text-white">10K+</div>
              <div class="text-sm text-slate-400">Events managed</div>
            </div>
            <div class="w-px h-12 bg-slate-700"></div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white">99%</div>
              <div class="text-sm text-slate-400">RSVP success rate</div>
            </div>
            <div class="w-px h-12 bg-slate-700"></div>
            <div class="text-center">
              <div class="text-3xl font-bold text-white">5★</div>
              <div class="text-sm text-slate-400">User rating</div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </main>
</Layout>