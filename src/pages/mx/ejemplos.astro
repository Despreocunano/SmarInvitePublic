---
import Layout from '../../layouts/Layout.astro';
import { Mouse } from '@lucide/astro';
import ExampleCard from '../../components/shared/ExampleCard.astro';
import texts from '../../i18n/mx';
---

<Layout title={texts.examplesPage.title} description={texts.examplesPage.description} texts={texts}>
  <main class="pt-16 min-h-screen">
    <!-- Hero Section -->
    <section class="relative min-h-screen flex items-center justify-center overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 bg-gradient-to-br from-gray-900 via-gray-800 to-gray-900"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_30%_20%,rgba(244,63,94,0.08),transparent_50%)]"></div>
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_70%_80%,rgba(59,130,246,0.08),transparent_50%)]"></div>
      <!-- Animated dots pattern -->
      <div class="absolute inset-0 opacity-10 pointer-events-none">
        <div class="absolute top-20 left-20 w-2 h-2 bg-rose-400 rounded-full animate-pulse"></div>
        <div class="absolute top-40 right-32 w-1 h-1 bg-blue-400 rounded-full animate-pulse delay-1000"></div>
        <div class="absolute bottom-32 left-1/4 w-1.5 h-1.5 bg-purple-400 rounded-full animate-pulse delay-500"></div>
        <div class="absolute bottom-20 right-20 w-1 h-1 bg-emerald-400 rounded-full animate-pulse delay-1500"></div>
      </div>
      <div class="relative z-10 w-full">
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
          <h1 class="text-4xl md:text-5xl font-bold text-white mb-6" set:html={texts.examplesPage.heroTitle} />
          <p class="text-xl text-fuchsia-200 mb-8">
            {texts.examplesPage.heroSubtitle}
          </p>
        </div>
      </div>
      <div class="pointer-events-none absolute left-1/2 -translate-x-1/2 bottom-8 z-20 flex flex-col items-center w-auto">
        <Mouse class="h-10 w-10 text-white animate-bounce" />
        <span class="text-xs text-white/70 mt-1">{texts.examplesPage.heroScroll}</span>
      </div>
    </section>
    <!-- Ejemplos Section -->
    <section class="max-w-7xl mx-auto px-4 sm:px-8 py-16">
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-8">
        {texts.examplesPage.examples.map((ejemplo) => (
          <ExampleCard nombre={ejemplo.name} imagen={ejemplo.image} enlace={ejemplo.link} color={ejemplo.color} buttonText={texts.home.exampleCard.button} />
        ))}
      </div>
    </section>
  </main>
</Layout> 